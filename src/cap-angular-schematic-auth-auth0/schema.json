{
    "$schema": "http://json-schema.org/schema",
    "id": "cap-angular-schematic-authentication-forked",
    "title": "cap-angular-schematic-authentication-forked",
    "type": "object",
    "properties": {
      "credentials": {
        "type": "boolean",
        "description": "Show or hide credentials",
        "x-prompt": "Add credentials in environment.ts for local use?",
        "$default": {
          "$source": "argv",
          "index": 0
        }
      },
      "clientID": {
        "type": "string",
        "description": "clientID",
        "x-prompt": "Set your Auth0 Client ID:",
        "$default": {
          "$source": "argv",
          "index": 1
        }
      },
      "clientSecret": {
        "type": "string",
        "description": "clientSecret",
        "x-prompt": "Set your Auth0 Client Secret:",
        "$default": {
          "$source": "argv",
          "index": 2
        }
      },
      "domain": {
        "type": "string",
        "description": "domain",
        "x-prompt": "Set your Auth0 Domain:",
        "$default": {
          "$source": "argv",
          "index": 3
        }
      },
      "endPoint": {
        "type": "string",
        "description": "endPoint",
        "x-prompt": "Set your endPoint:",
        "$default": {
          "$source": "argv",
          "index": 4
        }
      }
    },
    "required": ["credentials" ,"clientID", "clientSecret", "domain"]
  }